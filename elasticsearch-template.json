{
	"template": "mail-*",
	"settings": {
		"number_of_shards": 1
	},
	"mappings": {
		"log": {
			"dynamic_templates" : [
				{
					"string_fields" : {
						"match" : "*",
						"match_mapping_type" : "string",
						"mapping" : {
							"type" : "string",
							"index" : "analyzed",
							"omit_norms" : true,
							"fielddata" : {
								"format" : "disabled"
							},
							"fields" : {
								"raw" : {
									"type": "string",
									"index" : "not_analyzed"
								}
							}
						}
					}
				}
			],
			"properties": {
				"timestamp": {
					"type": "date",
					"format": "epoch_second"
				},
				"date": {
					"type": "date",
					"format": "yyyy.MM.dd"
				},
				"event": {
					"type": "string",
					"index": "not_analyzed"
				},
				"ip": {
					"type": "ip",
					"index": "not_analyzed"
				},
				"sg_event_id": {
					"type": "string",
					"index": "not_analyzed"
				},
				"sg_message_id": {
					"type": "string",
					"index": "not_analyzed"
				}
			}
		}
	},
	"aliases" : {
		"mail": {}
	}
}
